<section class='body'></section>

<style>
  .body {
    position: fixed;
    z-index: -1;
    width: 100%;
    height: 100vh;
    --x: calc(var(--posX, 0) * 1px);
    --y: calc(var(--posY, 0) * 1px);
    background-image:
      linear-gradient(115deg, rgb(211 255 215), rgb(0 0 0)),
      radial-gradient(
        90% 100% at calc(50% + var(--x)) calc(0% + var(--y)),
        rgb(200 200 200),
        rgb(022 000 045)
      ),
      radial-gradient(
        100% 100% at calc(80% - var(--x)) calc(0% - var(--y)),
        #fff,
        rgb(036 000 000)
      ),
      radial-gradient(
        150% 210% at calc(100% + var(--x)) calc(0% + var(--y)),
        rgb(020 175 125),
        #4945ff
      ),
      radial-gradient(
        100% 100% at calc(100% - var(--x)) calc(30% - var(--y)),
        rgb(255 077 000),
        rgb(000 200 255)
      ),
      linear-gradient(60deg, rgb(255 000 000), rgb(120 086 255));
    background-blend-mode:
      overlay, overlay, difference, difference, difference, normal;
  }
</style>

<script>
  document.body.addEventListener('pointermove', e => {
    const { currentTarget: el, clientX: x, clientY: y } = e;
    if (el instanceof HTMLElement) {
      const { top: t, left: l, width: w, height: h } = el.getBoundingClientRect();
      el.style.setProperty('--posX', `${x - l - w / 2}`);
      el.style.setProperty('--posY', `${y - t - h / 2}`);
    }
  });
</script>
